<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="bgColor" format="color"/>

    <declare-styleable name="MessageCountTextView">
        <attr name="isMessageStatus" format="boolean" />
        <attr name="maxCount" format="integer" />
        <attr name="messageCount" format="integer" />
        <attr name="bgColor" />
        <attr name="textColor" format="color" />
        <attr name="mCountMinSize" format="dimension" />
        <attr name="mStatusMinSize" format="dimension" />
