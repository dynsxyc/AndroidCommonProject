    <declare-styleable name="AddNumberView">
        <attr name="step_number" format="integer"/>
        <attr name="min_number" format="integer"/>
        <attr name="max_number" format="integer"/>
        <attr name="layoutId" format="integer"/>
        <attr name="isEditable" format="boolean"/>
    </declare-styleable>
    <attr name="triangleColor" format="color"/>
    <attr name="triangleWidth" format="dimension"/>
    <declare-styleable name="TriangleView">
        <attr name="triangleIsArrowDown" format="boolean"/>
        <attr name="triangleIsRight" format="boolean"/>
        <attr name="triangleRightPosition" format="integer"/>
        <attr name="triangleWidth"/>
        <attr name="triangleColor"/>
    </declare-styleable>
    <declare-styleable name="StartTriangleView">
        <attr name="triangleIsArrowEnd" format="boolean"/>
        <attr name="triangleWidth"/>
        <attr name="triangleColor"/>
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <!-- 密码的个数 -->
        <attr name="passwordNumber" format="integer"/>
        <!-- 密码圆点的半径 -->
        <attr name="passwordRadius" format="dimension" />
        <!-- 密码圆点的颜色 -->
        <attr name="passwordColor" format="color" />
        <!-- 分割线的颜色 -->
        <attr name="divisionLineColor" format="color" />
        <!-- 分割线的大小 -->
        <attr name="divisionLineSize" format="dimension" />
        <!-- 背景边框的颜色 -->
        <attr name="bgColor"/>
        <!-- 背景边框的大小 -->
        <attr name="bgSize" format="dimension" />
        <!-- 背景边框的圆角大小 -->
        <attr name="bgCorner" format="dimension"/>
        <!-- 是否隐藏密码 -->
        <attr name="isHide" format="boolean"/>
        <!-- 输入类型为默认类型 -->
        <attr name="inputTypeIsDefault" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="HIndicator">
        <attr name="hiBgColor" format="color"/>
        <attr name="hiIndicatorColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RoundConstraintLayout"><attr name="rv_backgroundColor"/><attr name="rv_backgroundPressColor"/><attr name="rv_cornerRadius"/><attr name="rv_strokeWidth"/><attr name="rv_strokeColor"/><attr name="rv_strokePressColor"/><attr name="rv_isRadiusHalfHeight"/><attr name="rv_isWidthHeightEqual"/><attr name="rv_cornerRadius_TL"/><attr name="rv_cornerRadius_TR"/><attr name="rv_cornerRadius_BL"/><attr name="rv_cornerRadius_BR"/><attr name="rv_isRippleEnable"/></declare-styleable>
