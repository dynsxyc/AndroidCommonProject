        <attr name="cutLineWidth" format="dimension"></attr>
        <attr name="cutLineColor" format="color"></attr>
        <attr name="cutLine" format="boolean"></attr>
        <attr name="lineCenter" format="boolean"></attr>
    </declare-styleable>
    <declare-styleable name="ClearEditText">
        <!-- 清除按钮的图标 -->
        <attr name="iconClear" format="reference"/>
        <attr name="iconLook" format="reference"/>
        <attr name="iconNoLook" format="reference"/>
        <attr name="isShowHidePassMode" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="FixedHeightNestedScrollView">
        <attr name="topOffset" format="dimension"/>
        <attr name="contentTopMargin" format="dimension"/>
