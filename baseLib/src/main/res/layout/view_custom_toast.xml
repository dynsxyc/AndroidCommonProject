<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.dyn.base.ui.weight.RoundConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:minWidth="@dimen/dp_135"
        android:minHeight="@dimen/dp_135"
        android:orientation="vertical"
        app:rv_backgroundColor="#CC000000"
        app:rv_cornerRadius="@dimen/dp_5">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mToastImg"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_toast_success" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mToastTv"
            style="@style/WrapWrapTextSize16.ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:singleLine="false"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mToastImg"
            tools:text="提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功提交成功" />
    </com.dyn.base.ui.weight.RoundConstraintLayout>
</FrameLayout>